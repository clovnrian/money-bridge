{
  "name": "clovnrian/money-bridge",
  "description": "Repository for download products, stock, etc. from Money S4",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Miroslav Babjak",
      "email": "clovnrian@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Clovnrian\\MoneyBridge\\": "src/"
    }
  },
  "require": {
    "php": "^7.0",
    "dibi/dibi": "^3.2.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.13.0",
    "phpstan/phpstan": "^0.10.3"
  },
  "scripts": {
    "cs": "php-cs-fixer fix --dry-run --diff --ansi",
    "cs-fix": "php-cs-fixer fix --ansi",
    "stan": "phpstan analyse --ansi --no-progress -l max src"
  }
}
